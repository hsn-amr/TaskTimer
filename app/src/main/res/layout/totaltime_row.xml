<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:padding="10dp">

<!--row for fragment_total_time recyclerview-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/total_title_bg"
        android:padding="10dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tvTotalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Workout"
        android:fontFamily="@font/roboto"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00.00.00"
        android:fontFamily="@font/roboto_medium"
        android:textSize="20dp"/>

        <ImageView
            android:id="@+id/ivTotalMore"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@drawable/group"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDescriptionHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/total_desc_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTotatlDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:padding="20dp"
            android:text="Description"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="end"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpdate"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@null"
                android:backgroundTint="@null"
                android:fontFamily="@font/roboto"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="@color/primary_blue" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDelete"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@null"
                android:backgroundTint="@null"
                android:fontFamily="@font/roboto"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/primary_blue" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>